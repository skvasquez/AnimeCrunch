@model AnimeCrunch.Models.DataModels.Season

<head>
    <link href="~/Content/CSS/Body.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CSS/TvShow.css" rel="stylesheet" type="text/css" />
</head>

<div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4" style="margin:15px">
    <!-- Recherche web : bootstrap card  -->
    <div class="card-season">
        <a href="/Library/Season?SeasonId=@Model.SeasonId">
            <img class="card-img-top mx-auto rounded" style="width:100%;height:375px" src="@Model.Image" alt="@Model.ShortSeasonName">
            <div class="card-body text-center">
                <h5 class="card-title">Season @Model.Number</h5>
                <p> @Model.Episodes.Count() @AnimeCrunch.Resources.Views.StringsViews.Episodes</p>
            </div>
        </a>
    </div>
</div>