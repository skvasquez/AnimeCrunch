@model AnimeCrunch.Models.DataModels.User

@{ ViewBag.Title = AnimeCrunch.Resources.Views.StringsViews.DoYouReallyWantToDeleteYourAccount; }

<h2 class="page-header">@ViewBag.Title</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm("Delete", "Users", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @*
        Notez qu'on ignore le UtilisateurId dans
        la méthode [HttpPost] Edit
        il n'est donc pas nécessaire de placer
        @Html.HiddenFor(m=>m.UtilisateurId)
        dans le formulaire (cette fois-ci)
    *@

    <div class="form-actions no-color">
        <input type="submit" value="@AnimeCrunch.Resources.Views.StringsViews.Delete" class="btn btn-danger" />
    </div>
}
