@model IEnumerable<AnimeCrunch.Models.DataModels.TvShow>
@using AnimeCrunch.Models.DataModels

@{TVShowDb db = new TVShowDb(); }

    <div style="padding-bottom:25px;">
        <div>
            <form class="form-inline" id="filter" action="/Library/Index" method="get">
                <div class="form-group" style="padding:20px">
                    <label for="FiltreTitle" style="margin-right:20px">@AnimeCrunch.Resources.Views.StringsViews.Title:</label>
                    <input type="text" class="form-control" id="FiltreTitle" name="FiltreTitle" value="@ViewBag.FiltreTitle" placeholder="@AnimeCrunch.Resources.Views.StringsViews.EnterTitle">
                </div>
                <div class="form-group" style="padding:20px">
                    <label for="FiltreGenre" style="margin-right:20px;">Genre:</label>
                    @Html.DropDownList("FiltreGenre", new SelectList(db.Genres.ToList(), "GenreId", "Name"), string.Empty, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group" style="padding:20px">
                    <label for="FiltreStudio" style="margin-right:20px">Studio:</label>
                    @Html.DropDownList("FiltreStudio", new SelectList(db.Studios, "StudioId", "Name"), string.Empty, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group" style="padding:20px">
                    <button type="submit" id="btnSearch" class="btn btn-info">@AnimeCrunch.Resources.Views.StringsViews.Search</button>
                </div>
            </form>
        </div>
    </div>

<div class="row">
    @foreach (TvShow tv in Model)
    {
        @Html.DisplayFor(m => tv)
    }
</div>
